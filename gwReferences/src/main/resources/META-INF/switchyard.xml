<?xml version="1.0" encoding="UTF-8"?>
<switchyard 
    xmlns="urn:switchyard-config:switchyard:1.0" 
    xmlns:bean="urn:switchyard-component-bean:config:1.0" 
    xmlns:camel="urn:switchyard-component-camel:config:1.0" 
    xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" 
    xmlns:soap="urn:switchyard-component-soap:config:1.0" 
    xmlns:transform="urn:switchyard-config:transform:1.0"
    name="gwReferences" 
    targetNamespace="urn:org.jboss.gpse.gwReferences:gwReferences:0.0.1-SNAPSHOT">

  <sca:composite name="gwReferences" targetNamespace="urn:org.jboss.gpse.gwReferences:gwReferences:0.0.1-SNAPSHOT">

    <sca:service name="IInvokeGWReference" promote="InvokeGWReference/IInvokeGWReference">
      <camel:binding.file>
        <camel:directory>/tmp</camel:directory>
        <camel:fileName>test.txt</camel:fileName>
        <camel:delay>5000</camel:delay>
        <camel:delete>true</camel:delete>
      </camel:binding.file>
    </sca:service>

    <sca:component name="InvokeGWReference">
      <bean:implementation.bean class="org.jboss.gpse.gwReferences.InvokeGWReference"/>
      <sca:service name="IInvokeGWReference">
        <sca:interface.java interface="org.jboss.gpse.gwReferences.IInvokeGWReference"/>
      </sca:service>
      <sca:reference name="ISubmitSMS">
        <sca:interface.wsdl interface="http://${ENV.HOSTNAME}:8080/submitSMS/ISubmitSMS?wsdl#wsdl.porttype(SubmitSMSPortType)"/>
      </sca:reference>
    </sca:component>

    <sca:reference name="ISubmitSMS" multiplicity="0..1" promote="InvokeGWReference/SOAPGWReference">
      <soap:binding.soap>
        <soap:contextMapper/>
        <soap:wsdl>http://${ENV.HOSTNAME}:8080/submitSMS/ISubmitSMS?wsdl</soap:wsdl>
      </soap:binding.soap>
    </sca:reference>

  </sca:composite>

    <transforms >
        <transform:transform.jaxb 
            from="java:org.jboss.gpse.SMS"
            to="{urn:org.jboss.gpse.submitSMS:transform-jaxb:1.0}sms" 
            contextPath="org.jboss.gpse.submitSMS"
        />
        <transform:transform.jaxb 
            from="java:org.jboss.gpse.SMSResponse"
            to="{urn:org.jboss.gpse.submitSMS:transform-jaxb:1.0}smsResponse" 
            contextPath="org.jboss.gpse.submitSMS"
        />
    </transforms>
</switchyard>
